{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noLib": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "watch": true,
  },
  "exclude": [
    "./**/__tests__/*",
    "./__tests__/**/*",
    "./node_modules/**/*"
  ],
}
